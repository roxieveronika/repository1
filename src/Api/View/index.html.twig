{% extends 'Api/View/Layout/layout.html.twig' %}


{% block content %}

    <table class="table">
    <thead>
    <tr>
        <th>id</th>
        <th>nazwa</th>
        <th>opcje</th>
    </tr>
    </thead>

    <tbody>

    {% for res in result %}

        <tr>
            <td>{{ res.id }}</td>
            <td>{{ res.nazwa }}</td>
            <td><a class="btn btn-danger" href="{{ url('categoryDelete', {'id':res.id}) }}">usuwanie</a>
                <a class="btn btn-primary" href="{{ url('categoryEdit', {'id':res.id}) }}">edycja</a>
                <a class="btn btn-primary" href="{{ url('categoryAdd') }}">dodawanie</a>
            </td>

        </tr>
    {% endfor %}

    </tbody>

    </table>

    {{ pagination(page, allPage, 'categories') }}

{% endblock %}
