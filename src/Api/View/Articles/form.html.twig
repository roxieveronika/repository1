{% extends 'Api/View/Layout/layout.html.twig' %}

{% block content %}

    {% if valid == 'error' %}
        <h4 class="alert alert-warning">Wypełnij pole!</h4>
    {% endif %}



<form action="{{ url('articleSave', {id : result.id}) }}" method="post" class="navbar-form navbar-left" role="search">

    <div class="form-group {% if valid == 'error' %}{{ result.tytul == '' ? 'has-error' : '' }}{% endif %}">
        <input type="text" name="tytul" class="form-control" placeholder="Tytuł" value="{{ result.tytul }}">
    </div>
    <br><br>

    <div class="form-group">
        <input type="date" name="data" class="form-control" value="{{ result.data }}">
    </div>
    <br><br>

    <div class="form-group {% if valid == 'error' %}{{ result.lead == '' ? 'has-error' : '' }}{% endif %}">
        <textarea type="text" name="lead" placeholder="Lead" class="form-control" rows="5" cols="70" id="comment">{{ result.lead }}</textarea>
    </div>
    <br><br>

    <div class="form-group {% if valid == 'error' %}{{ result.tresc == '' ? 'has-error' : '' }}{% endif %}">
        <textarea type="text" name="tresc" class="form-control" rows="5" cols="70" id="comment">{{ result.tresc }}</textarea>
    </div>
    <br><br>

    <div class="form-group">
        <select name="idcategory">
            {% for res in catList %}
            <option {{ res.id == result.idcategory ? 'selected' : '' }} value="{{ res.id }}"> {{ res.nazwa }}
            </option>
            {% endfor %}
        </select>
    </div>
    <br><br>

    <input type="hidden" name="id" value="{{ result.id }}">
    <br>

    <button type="submit" class="btn btn-default">Change/Add</button>

</form>


{% endblock %}